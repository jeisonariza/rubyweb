<div class ="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">

              <%= form_for Article.new do |f| %>

                <% if @article.errors.any? %>
                  <div id="error_explanation">
                    <h2>
                      <%= pluralize(@article.errors.count, "error") %> prohibited
                      this Profile from being saved:
                    </h2>
                    <ul>
                      <% @article.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

              <div class= "form-group">
                <div class= "field">
                  <p>
                    <%= f.label :name  %><br>
                    <%= f.text_field :name, :class => 'form-control', :placeholder => "Profile Name " %>
                  </p>
                </div> 
              </div>

              <div class= "form-group">
                <div class= "field">
                  <p>
                    <%= f.label :phone %><br>
                    <%= f.text_field :phone, :class => 'form-control', :placeholder => "Profile Phone" %>
                  </p>
                </div> 
              </div>

              <div class= "form-group">
                <div class= "field">
                  <p>
                    <%= f.label :email %><br>
                    <%= f.text_field :email, :class => 'form-control', :placeholder => "Profile Email" %>
                  </p> 
                </div> 
              </div>

              <p>
                <%= f.submit "Create Profile", :class => "btn btn-primary" %>
              </p>
               
            <% end %>

        </div>
      </div>
  </div>
</div>